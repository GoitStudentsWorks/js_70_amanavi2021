<div class='thumb'>
  <img
    class='modal__image'
    src='https://image.tmdb.org/t/p/w500/{{poster_path}}'
    alt='{{title}}'
  />
</div>
<div class='content__text'>
  <h2 class='modal__title'>
     {{#if title}}
            {{title}}
            {{/if}}
  </h2>
  <ul class='film-card__info-list'>
    <li class='film-card__info-el'>
      <p class='film-card__info-item'>Vote / Votes</p>
      <p class='film-card__info-item--value'>
        <span class='info-item__highlight-red'>
           {{#if vote_average}}
            {{vote_average}}
         {{/if}}
          </span>
        /
        <span class='info-item__highlight-grey'>
           {{#if vote_count}}
            {{vote_count}}
         {{/if}}
        </span>
      </p>
    </li>
    <li class='film-card__info-el'>
      <p class='film-card__info-item'>Popularity</p>
      <p class='film-card__info-item--value'>
        {{#if popularity}}
            {{popularity}}
         {{/if}}
      </p>
    </li>
    <li class='film-card__info-el'>
      <p class='film-card__info-item'>Original Title</p>
      <p class='film-card__info-item--value'>
         {{#if title}}
            {{title}}
            {{/if}}
      </p>
    </li>
    <li class='film-card__info-el'>
      <p class='film-card__info-item'>Genre</p>
      <p class='film-card__info-item--value'>
        {{#if genreList}}
        {{genreList}}
        {{/if}}
      </p>
    </li>
  </ul>
  <h3 class='film-card__title'>About</h3>
  <p class='film-card__overview'>
    {{#if overview}}
        {{overview}}
        {{/if}}
  </p>
  <ul class='list-buttons'>
    <li class='list-buttons-item'>
      <button
        type='submit'
        class='button-list button-list__watched'
        id='watchedInModal'
      >Add to watched</button>
    </li>
    <li class='list-buttons-item'>
      <button
        type='submit'
        class='button-list button-list__queue'
        id='queueInModal'
      >Add to queue</button>
    </li>
  </ul>
</div>