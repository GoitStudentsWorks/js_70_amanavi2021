<div class="film-card">
    
    <div>
        <img class="film-card__small-image" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="{{title}}"
        loading="lazy" data-id="{{id}}" />
        <button class="trailer-player-btn" type="button">
            &#9658
            {{!-- <svg width="40" height="40" class="trailer-player__svg">
                <use href="./images/symbol-defs.svg#icon-play"></use>
            </svg> --}}
        </button>
    </div>

    <div class="info">
        <p class="info__title">
            {{#if title}}
            {{title}}
            {{/if}}
        </p>
        <div class="info__genre-year">
            <p class="info__genre">
                {{#if genreList}}
                {{genreList}}
                {{/if}}
            </p>
            <p class="info__year">
                {{#if year}}
                &nbsp|&nbsp{{year}}
                {{/if}}
            </p>
        </div>
    </div>
</div>